{
  "build": {
    "beforeDevCommand": "yarn dev",
    "beforeBuildCommand": "yarn build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "everest-check",
    "version": "1.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": true,
      "shell": {
        "all": false,
        "open": true
      },
      "fs": {
        "all": true,
        "scope": ["*","$DATA/*","$DESKTOP/*","$DESKTOP/**","$DOWNLOAD/*","$APPDATA/*","$APPDATA/**"]
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "everest",
      "icon": [
        "icons/myicon32.png",
        "icons/myicon128.png",
        "icons/myicon128.png",
        "icons/myicon.icns",
        "icons/myicon.ico"
      ],
      "windows": {
        "webviewInstallMode": {
          "type": "downloadBootstrapper"
        }
      }
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "陕西省保密技术服务中心",
        "width": 900,
        "height": 600,
        "theme": "Light"
      }
    ],
    "updater": {
      "active": false,
      "dialog": true,
      "endpoints": ["https://github.com/hqnzsk17/tauri/releases/download/updater/update"],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDlDRjdBMzM4M0E0MTVBODcKUldTSFdrRTZPS1AzbkJCZGpmckVyT2JWYWtYbHNHZzhDWE4ybTlSYnd6WkpwQmthOEk1Skc1dk8K",
      "windows": {
        "installMode": "passive",
        "installerArgs": []
      }
    }
  }
}
